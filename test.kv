<AppManager>:
    HomeScreen:
        name: "home_screen"
        id: home_screen
    ViewScreen:
        name: "view_screen"
        id: view_screen
        
<HomeScreen>:
    BoxLayout:
        orientation: "vertical"

        Button:
            id: file_choose
            size_hint_y: 0.1
            on_release: root.choose()
            text: "Carregar uma imagem"
            
        Image:
            id: image
            source: "images/fundo.png"
            
        Button:
            id: submit_button
            disabled: True
            text: "Processar sua imagem"
            on_release: root.submit_img()
            size_hint_y: 0.1
        
<ViewScreen>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1

            Button:
                text: "Sem Marcações"
                on_release: root.change_original()

            Button:
                text: "Todas"
                on_release: root.change_all()

            Button:
                text: "Lesionadas"
                background_color: [1, 0, 0]
                on_release: root.change_lesioned()

            Button:
                text: "Negativas"
                background_color: [0, 0.298, 1]
                on_release: root.change_negative()

        Label:
            id: img_result_text
            size_hint_y: 0.1
            font_size: 20
            orientation: "center"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)
            color: 0, 0, 0, 1


		AsyncImage:
            id: image2
            source: ''
            nocache: True

        Button:
            text: "Processar nova imagem"
            on_release: root.change_screen()
			size_hint_y: 0.1

<WaitingPopUp>:
    title: "Aviso"
    size_hint_x: 0.6
    size_hint_y: 0.2

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Aguarde enquanto processamos sua imagem. \nEste popup fechará automaticamente ao finalizar o processamento."
            halign: "center"


