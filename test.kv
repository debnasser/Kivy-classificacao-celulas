                Rectangle: 
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)
            #text: 'oi'
            
            #comandos para fazer com que o tamanho do label acompanhe a altura do texto
            size_hint_y: None
            size: self.texture_size
            text_size: self.width, None
            
            #text_size: self.size    # se o texto for maior que o tamanho da tela precisa desse comando para quebrar o texto
            font_size: '30sp'
            halign: 'center'
            valign: 'center'
            #padding_x: '30dp'
            #padding_y: '30dp'
            color: 0, 0, 0, 1
		Image:
            id: image2
            source: ''
        Button:
            text: 'Enviar nova imagem para classificação'
            on_release: root.voltar_tela()
			size_hint_y: 0.1

            
            

