<TelaManager>:
    Screen1:
        name: 'screen1'
        id: screen1
    Screen2:
        name: 'screen2'
        id: screen2
        
<Screen1>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: lb_titulo
            canvas.before:
                Color:
                    rgba: 0.8, 1, 0.5, 1
                Rectangle: 
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)
            text: 'Ferramenta XX'
            #comandos para fazer com que o tamanho do label acompanhe a altura do texto
            size_hint_y: None
            size: self.texture_size
            text_size: self.width, None
            
            font_size: '20sp'
            halign: 'center'
            valign: 'center'
            color: 0, 0, 0, 1
        
        Label:
            id: lb_descrição
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle: 
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)
            text: 'Para iniciar, selecione uma imagem'
            #comandos para fazer com que o tamanho do label acompanhe a altura do texto
            size_hint_y: None
            size: self.texture_size
            text_size: self.width, None
            
            font_size: '20sp'
            halign: 'center'
            valign: 'center'
            color: 0, 0, 0, 1

        #FileChooserIconView:
        #    id: filechooser
        #    on_selection: root.selected(filechooser.selection)
       
        FileChoose:
            size_hint_y: 0.1
            on_release: root.choose()
            text: 'Carregue uma imagem'
            
        Image:
            id: image
            source: ''
            
        #Button:
            #text: 'Digite aqui'
            #on_release: root.manager.current = 'screen2'
        #TextInput:
        #    id: txt
        Button:
            text: 'Enviar imagem para classificação'
            #on_release: root.load_txt() 
            on_release: root.classificar_img() 
            #pos_hint: {'x': 0.5, 'y': 0} 
            size_hint_y: 0.3
        
        Button:
            text: 'Fechar'
            on_release: root.close_application() 
            #pos_hint: {'x': 0.5, 'y': 0.5} 
            size_hint_y: 0.1    
        
<Screen2>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: lb
            canvas.before:
                Color:
