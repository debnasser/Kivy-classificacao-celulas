<AppManager>:
    HomeScreen:
        name: 'home_screen'
        id: home_screen
    ViewScreen:
        name: 'view_screen'
        id: view_screen
        
<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: title_label
            canvas.before:
                Color:
                    rgba: 0.8, 1, 0.5, 1
                Rectangle: 
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)
            text: 'Ferramenta XX'
            #comandos para fazer com que o tamanho do label acompanhe a altura do texto
            size_hint_y: None
            size: self.texture_size
            text_size: self.width, None
            
            font_size: '20sp'
            halign: 'center'
            valign: 'center'
            color: 0, 0, 0, 1
        
        Label:
            id: desc_label
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle: 
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)
            text: 'Para iniciar, selecione uma imagem'
            #comandos para fazer com que o tamanho do label acompanhe a altura do texto
            size_hint_y: None
            size: self.texture_size
            text_size: self.width, None
            
            font_size: '20sp'
            halign: 'center'
            valign: 'center'
            color: 0, 0, 0, 1

        FileChoose:
            size_hint_y: 0.1
            on_release: root.choose()
            text: 'Carregue uma imagem'
            
        Image:
            id: image
            source: ''
            
        Button:
            text: 'Enviar imagem para classificação'
            on_release: root.submit_img()
            size_hint_y: 0.3
        
        Button:
            text: 'Fechar'
            on_release: root.close_application() 
            size_hint_y: 0.1
        
<ViewScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: lb
            canvas.before:
                Color:
                    rgba: 0.8, 1, 0.5, 1
                Rectangle: 
                    size: self.size
                    pos: self.pos   # para pegar o objeto correto na imagem (sem isso a cor mudava no objeto errado)

            size_hint_y: None
            size: self.texture_size
            text_size: self.width, None
            
            #text_size: self.size    # se o texto for maior que o tamanho da tela precisa desse comando para quebrar o texto
            font_size: '30sp'
            halign: 'center'
            valign: 'center'
            color: 0, 0, 0, 1
		AsyncImage:
            id: image2
            source: ''
            pos: self.pos
        Button:
            text: 'Enviar nova imagem para classificação'
            on_release: root.change_screen()
			size_hint_y: 0.1

<LabelDropDown>:
    Button:
        text: 'Todas'
        size_hint_y: None
        height: 44
        #on_release: root.select('item1')
    Button:
        text: 'Lesioned'
        size_hint_y: None
        height: 44
    Button:
        text: 'Negative'
        size_hint_y: None
        height: 44

# usar dp para medida de padding e sp para medida de fonte